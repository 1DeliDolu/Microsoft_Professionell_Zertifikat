@page "/fetchproducts"
@using System.Text.Json
@inject IHttpClientFactory HttpClientFactory

<h3>Product List</h3>

@if (isLoading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrWhiteSpace(error))
{
    <p class="text-danger">@error</p>
}
else if (products is null || products.Length == 0)
{
    <p>No products found.</p>
}
else
{
    <div class="product-list-card">
        <div class="product-list-header">
            <span>Inventory</span>
            <span class="product-count">@products.Length item(s)</span>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="@($"align-middle {SortClass(nameof(Product.Id))}")">
                            <button type="button"
                                    class="btn btn-sm btn-link p-0 text-decoration-none fw-semibold w-100 d-flex align-items-center justify-content-start gap-1 text-nowrap"
                                    @onclick="() => SetSort(nameof(Product.Id))">
                                # @SortIndicator(nameof(Product.Id))
                            </button>
                        </th>

                        <th scope="col" class="@($"align-middle {SortClass(nameof(Product.Name))}")">
                            <button type="button"
                                    class="btn btn-sm btn-link p-0 text-decoration-none fw-semibold w-100 d-flex align-items-center justify-content-start gap-1 text-nowrap"
                                    @onclick="() => SetSort(nameof(Product.Name))">
                                Product @SortIndicator(nameof(Product.Name))
                            </button>
                        </th>

                        <th scope="col" class="@($"align-middle {SortClass(CategorySortKey)}")">
                            <button type="button"
                                    class="btn btn-sm btn-link p-0 text-decoration-none fw-semibold w-100 d-flex align-items-center justify-content-start gap-1 text-nowrap"
                                    @onclick="() => SetSort(CategorySortKey)">
                                Category @SortIndicator(CategorySortKey)
                            </button>
                        </th>

                        <th scope="col" class="@($"text-end align-middle {SortClass(nameof(Product.Price))}")">
                            <button type="button"
                                    class="btn btn-sm btn-link p-0 text-decoration-none fw-semibold w-100 d-flex align-items-center justify-content-end gap-1 text-nowrap"
                                    @onclick="() => SetSort(nameof(Product.Price))">
                                Price @SortIndicator(nameof(Product.Price))
                            </button>
                        </th>

                        <th scope="col" class="@($"text-end align-middle {SortClass(nameof(Product.Stock))}")">
                            <button type="button"
                                    class="btn btn-sm btn-link p-0 text-decoration-none fw-semibold w-100 d-flex align-items-center justify-content-end gap-1 text-nowrap"
                                    @onclick="() => SetSort(nameof(Product.Stock))">
                                Stock @SortIndicator(nameof(Product.Stock))
                            </button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in DisplayProducts)
                    {
                        <tr>
                            <th scope="row" class="@SortClass(nameof(Product.Id))">@p.Id</th>
                            <td class="@($"fw-semibold {SortClass(nameof(Product.Name))}")">@p.Name</td>
                            <td class="@SortClass(CategorySortKey)">@((p.Category?.Name) ?? "-")</td>
                            <td class="@($"text-end {SortClass(nameof(Product.Price))}")">$@p.Price.ToString("F2")</td>
                            <td class="@($"text-end {SortClass(nameof(Product.Stock))}")">@p.Stock</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private Product[]? products;
    private bool isLoading = true;
    private string? error;

    private const string CategorySortKey = "Category";

    private string sortColumn = nameof(Product.Id);
    private bool sortAsc = true;

    private IEnumerable<Product> DisplayProducts =>
        products is null ? Array.Empty<Product>() : ApplySort(products);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var http = HttpClientFactory.CreateClient("ServerAPI");

            // ✅ Doğru route: api/productlist
            var response = await http.GetAsync("api/productlist");
            response.EnsureSuccessStatusCode();

            var json = await response.Content.ReadAsStringAsync();

            products = JsonSerializer.Deserialize<Product[]>(
                json,
                new JsonSerializerOptions { PropertyNameCaseInsensitive = true });

            if (products is null)
                error = "Sunucudan boş/uyumsuz veri geldi (products = null).";
        }
        catch (JsonException jex)
        {
            error = "Sunucudan geçersiz JSON geldi. (Console'u kontrol et)";
            Console.WriteLine($"JSON error: {jex.Message}");
        }
        catch (HttpRequestException hex)
        {
            error = $"API isteği başarısız: {hex.Message}";
            Console.WriteLine($"HTTP error: {hex.Message}");
        }
        catch (Exception ex)
        {
            error = $"Beklenmeyen hata: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SetSort(string column)
    {
        if (sortColumn == column)
        {
            sortAsc = !sortAsc;
        }
        else
        {
            sortColumn = column;
            sortAsc = true;
        }
    }

    private Microsoft.AspNetCore.Components.RenderFragment SortIndicator(string column) => builder =>
    {
        if (sortColumn != column) return;

        builder.AddMarkupContent(0, "&nbsp;");

        var icon = sortAsc ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill";
        builder.OpenElement(1, "i");
        builder.AddAttribute(2, "class", icon);
        builder.AddAttribute(3, "aria-hidden", "true");
        builder.CloseElement();
    };

    private string SortClass(string column) => sortColumn == column ? "sorted-col" : string.Empty;

    private IEnumerable<Product> ApplySort(IEnumerable<Product> source)
    {
        return (sortColumn, sortAsc) switch
        {
            (nameof(Product.Id), true) => source.OrderBy(p => p.Id),
            (nameof(Product.Id), false) => source.OrderByDescending(p => p.Id),

            (nameof(Product.Name), true) => source.OrderBy(p => p.Name ?? string.Empty),
            (nameof(Product.Name), false) => source.OrderByDescending(p => p.Name ?? string.Empty),

            (CategorySortKey, true) => source.OrderBy(p => p.Category?.Name ?? string.Empty),
            (CategorySortKey, false) => source.OrderByDescending(p => p.Category?.Name ?? string.Empty),

            (nameof(Product.Price), true) => source.OrderBy(p => p.Price),
            (nameof(Product.Price), false) => source.OrderByDescending(p => p.Price),

            (nameof(Product.Stock), true) => source.OrderBy(p => p.Stock),
            (nameof(Product.Stock), false) => source.OrderByDescending(p => p.Stock),

            _ => source
        };
    }

    public sealed class Product
    {
        public int Id { get; set; }
        public string? Name { get; set; }
        public double Price { get; set; }
        public int Stock { get; set; }
        public Category? Category { get; set; }
    }

    public sealed class Category
    {
        public int Id { get; set; }
        public string? Name { get; set; }
    }
}

<style>
    .product-list-card {
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 12px;
        background: linear-gradient(180deg, #ffffff 0%, #fafafa 100%);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
        overflow: hidden;
    }

    .product-list-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 14px 18px;
        background: #0f172a;
        color: #ffffff;
        font-weight: 600;
        letter-spacing: 0.2px;
    }

    .product-count {
        font-size: 0.85rem;
        color: #cbd5f5;
    }

    .table thead th {
        text-transform: uppercase;
        font-size: 0.78rem;
        letter-spacing: 0.6px;
        color: #475569;
        background-color: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
        vertical-align: middle;
    }

    .table tbody tr {
        transition: background-color 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #eef2ff;
    }

    .table thead th.sorted-col {
        background-color: #e2e8ff;
    }

    .table tbody td.sorted-col,
    .table tbody th.sorted-col {
        background-color: #f1f5ff;
    }

</style>
